{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": [
      "@types/*/**",
      "node_modules/@types"
    ],
    "paths": {
      "src/*": ["./src/*"],
      "auth/*": ["./src/auth/*"],
      "blog/*": ["./src/blog/*"],
      "chatWebSockets/*": ["./src/chatWebSockets/*"],
      "@utils/*": ["./src/utils/*"],
    }
  }
}
